@using Redemption.Domain
@model CreateRedemption
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="page d-flex justify-content-center">
    <div class="header m-5">
        <h2>Вход</h2>
        <div class="container d-flex justify-content-center">
            <form method="post" asp-controller="Accounts" asp-action="Login">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="m-1">
                    <input class="form-control" asp-for="Company" placeholder="Email">
                </div>
                <div class="m-1">
                    <input class="form-control" asp-for="Amount" placeholder="Email">
                </div>
                <div class="m-1">
                    <input class="form-control" asp-for="Currency" placeholder="Email">
                </div>
                <div class="m-1">
                    <button class="mt-2 btn btn-primary w-100" type="submit">Войти</button>
                </div>
            </form>
        </div>
    </div>
</div>